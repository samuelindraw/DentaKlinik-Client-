<div class="block-content">
    @if (Context.Session.GetString("Userrole") == "Admin")
    {
        <form asp-action="CreatePost" method="post">
            <div class="row">
                <div class="col-md-7">
                    <div class="form-group row">
                        <div class="col-6">
                            <label asp-for="Username">Username  :</label>
                            <input asp-for="Username" class="form-control form-control-lg"  />
                            <span asp-validation-for="Username" class="text-danger" />
                        </div>
                        <div class="col-6">
                            <label asp-for="Jabatan">Jabatan :</label>
                            <input asp-for="Jabatan" class="form-control"  />
                            <span asp-validation-for="Jabatan" class="text-danger" />
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <label asp-for="TanggalJoin">TanggalJoin :</label>
                        <input asp-for="TanggalJoin" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control"  />
                        <span asp-validation-for="TanggalJoin" class="text-danger" />
                    </div>
                </div>
                &nbsp;
                &nbsp;
                <div class="form-group row">
                    <div class="col-12">
                        <label asp-for="totaji">Gaji :</label>
                        <input asp-for="totaji" class="form-control"  />
                        <span asp-validation-for="totaji" class="text-danger" />
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-12">
                    <button type="submit" value="Submit" class="btn btn-alt-primary">
                        <i class="fa fa-check mr-5"></i> Complete Detail Pegawai
                    </button>
                </div>
            </div>
        </form>
    }
    else
    {
    <form asp-action="CreatePost" method="post">
        <div class="row">
            <div class="col-md-7">
                <div class="form-group row">
                    <div class="col-6">
