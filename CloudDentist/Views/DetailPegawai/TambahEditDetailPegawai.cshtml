                    <input asp-for="TanggalJoin" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" readonly />
                    <span asp-validation-for="TanggalJoin" class="text-danger" />
                </div>
            </div>
            &nbsp;
            &nbsp;
            <div class="form-group row">
                <div class="col-12">
                    <label asp-for="totaji">Gaji :</label>
                    <input asp-for="totaji" class="form-control" readonly />
                    <span asp-validation-for="totaji" class="text-danger" />
                </div>
            </div>
        </div>
    </form>
    }
</div>
