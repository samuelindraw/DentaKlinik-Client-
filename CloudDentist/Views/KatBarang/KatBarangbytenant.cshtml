            alertify.confirm('Data Kategori', 'Apakah anda yakin untuk menghapus data ini ?!', function (e) {
                swal("Berhasil", "@TempData["Pesan"]", "success");
                if (e) {
                 
                    window.location.href = '@Url.Action("Delete","KatBarang")/' + Id;
                   

                }
